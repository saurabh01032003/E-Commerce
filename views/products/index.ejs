<div class="row">
    <% for(let item of products){ %>
        <div class="col-lg-4 mt-4">
            <div class="card product-card shadow-sm mx-auto" style="width: 18rem;">
                <img src="<%=item.img%>" class="card-img-top img-fluid" alt="<%=item.name%>">
                <div class="card-body text-center">
                    <h4 class="card-title product-name"><%=item.name%></h4>
                    <h6 class="card-title product-price"><%=item.price%></h6>
                    <p class="card-text product-desc"><%=item.desc%></p>
                    <a href="/products/<%=item._id%>" class="btn btn-primary view-btn">View Product</a>

                    <form class="d-inline-block delete-form" action="/products/<%=item._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-sm btn-danger delete-btn">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    <% } %>
</div>


<style>
  /* Background for the entire page */
  body {
      background: linear-gradient(135deg, #f0f4c3 0%, #cfd8dc 100%);
      font-family: 'Arial', sans-serif;
  }

  /* Background for the row containing the products */
  .row {
      margin: 0 auto;
      padding: 20px;
      background-color: rgba(255, 255, 255, 0.9);
      border-radius: 10px;
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
  }

  /* Product card styling */
  .product-card {
      background-color: #ffffff;
      border: none;
      transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
  }

  .product-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
  }

  .product-name {
      font-size: 1.25rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
      color: #333;
  }

  .product-price {
      font-size: 1.1rem;
      color: #ff5722;
      margin-bottom: 1rem;
  }

  .product-desc {
      font-size: 0.9rem;
      color: #777;
      margin-bottom: 1.25rem;
  }

  .view-btn {
      margin-bottom: 0.5rem;
      background-color: #0288d1;
      border-color: #0288d1;
  }

  .view-btn:hover {
      background-color: #0277bd;
      border-color: #0277bd;
  }

  .delete-form {
      margin-top: 0.5rem;
  }

  .delete-btn {
      padding: 0.25rem 0.75rem;
      font-size: 0.85rem;
  }
</style>